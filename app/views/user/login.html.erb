<h2>Login</h2>
<% form_for :user do |form| %>
    <fieldset>
        <legend>Login to RailsSpace</legend>
        
        <%= render :partial => "screen_name_field_row", :locals => { :form => form } %>
        
        <%= render :partial => "password_field_row", :locals => { :form => form, :field => "password" } %>
        <div class="form_row">
            <label for="remember_me">Remember ?:</label>
            <%= form.check_box :remember_me %>
        </div>
        <div class="form_row">
            <%= submit_tag "Login!", :class => "submit" %>
        </div>
    </fieldset>
<% end %>

<p>
 You don't have account ? <%= link_to "Sign in", :action => "register" %>
</p>
