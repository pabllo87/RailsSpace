<h2>Register</h2>
<% form_for :user do |form| %>
    <fieldset>
        <legend>Fill out the fields below</legend>
        
        <%= error_messages_for "user" %>
        
        <%= render :partial => "screen_name_field_row", :locals => { :form => form } %>
        
        <%= render :partial => "email_field_row", :locals => { :form => form } %>
        
        <%= render :partial => "password_field_row",
               :locals => { :form => form, :field => "password", :field_title => "Password" } %>
        <%= render :partial => "password_field_row",
               :locals => { :form => form, :field => "password_confirmation", :field_title => "Confirm password" } %>
        
        <div class="form_row">
            <%= submit_tag "Register!", :class => 'submit' %>
        </div>
    </fieldset>
<% end %>
