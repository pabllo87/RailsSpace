<h2><%= @title %></h2>
<%= error_messages_for "user" %>
<% form_for :user do |form| %>
<fieldset>
  <legend>e-Mail</legend>
  <div class="form_row">
    <label for="email">e-Mail</label>
    <%= form.text_field :email,
                        :size => User::EMAIL_SIZE,
                        :maxlength => User::EMAIL_MAX_LENGTH %>
  </div>
  <div class="form_row">
    <%= submit_tag "Update", :class => "submit" %>
  </div>
</fieldset>
<% end %>
